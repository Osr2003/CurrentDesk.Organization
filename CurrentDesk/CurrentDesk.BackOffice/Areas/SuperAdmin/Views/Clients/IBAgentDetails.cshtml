@{
    ViewBag.Title = "IBAgentDetails";
    Layout = "~/Areas/SuperAdmin/Views/Shared/SuperAdminMaster.cshtml.cshtml";
}

<!-- BEGIN CONTENT SECTION -->
<div class="content-wrapper">

    <!-- This <div> is for 2 column layouts and contains the left column content and a container for the right column background. -->
    <div class="content-table">

        <!-- Left column content goes here. -->
        <div class="content-left">

            <!-- Page Title Bar -->
            <div class="page-title">
                <h1 class="clients"><span class="normal"><a href="clients.html">Clients</a> : <a href="client-details-ib.html">[client name]</a> : <a href="client-agents-ib.html">IB Agents</a> :</span> [agent name]</h1>
            </div>

            <!-- Agent Information Section -->
            <article>
                <h2 class="inline-block">Agent Information</h2>
                <div class="content-section">
                    <ul class="row border">
                        <li class="columns four">
                            <h3>First Name</h3>
                            [first name]</li>
                        <li class="columns four">
                            <h3>Last Name</h3>
                            [last name]</li>
                        <li class="columns four">
                            <h3>Date of Birth</h3>
                            [date of birth]</li>
                    </ul>
                    <ul class="row border">
                        <li class="columns four">
                            <h3>Phone Number</h3>
                            [phone number]</li>
                        <li class="columns eight">
                            <h3>Email Address</h3>
                            [email address]</li>
                    </ul>
                    <ul class="row border">
                        <li class="columns four">
                            <h3>Phone ID</h3>
                            [phone id]</li>
                        <li class="columns eight">
                            <h3>Password</h3>
                            [password]</li>
                    </ul>
                    <ul class="row border">
                        <li class="columns four">
                            <h3>Password</h3>
                            <input class=" width-sm" type="text" placeholder="[password]">
                            <button class="btn btn-small margin-left">Save Changes</button></li>
                        <li class="columns eight">
                            <h3>Phone ID</h3>
                            [phone id]</li>
                    </ul>
                    <ul class="row">
                        <li class="columns twelve">
                            <h3>Agent Address</h3>
                            [street address]</li>
                    </ul>
                    <ul class="row">
                        <li class="columns four">
                            <h3>City</h3>
                            [city]</li>
                        <li class="columns four">
                            <h3>Country</h3>
                            [country]</li>
                        <li class="columns four">
                            <h3>Postal Code</h3>
                            [postal code]</li>
                    </ul>
                </div>
            </article>

            <!-- Banking Information Section -->
            <article>
                <h2 class="inline-block">Agent Banking Information</h2>
                <div class="content-section">
                    <ul class="row">
                        <li class="columns four">
                            <h3>Bank Name</h3>
                            [bank name]</li>
                        <li class="columns eight">
                            <h3>Account Number</h3>
                            [account number]</li>
                    </ul>
                    <ul class="row border">
                        <li class="columns four">
                            <h3>Bic Number/SWIFT Code</h3>
                            [bic number/swift code]</li>
                        <li class="columns eight">
                            <h3>Receiving Bank Information</h3>
                            [branch code] [branch number]</li>
                    </ul>
                    <ul class="row">
                        <li class="columns twelve">
                            <h3>Bank Address</h3>
                            [street address]</li>
                    </ul>
                    <ul class="row">
                        <li class="columns four">
                            <h3>City</h3>
                            [city]</li>
                        <li class="columns five">
                            <h3>Country</h3>
                            [country]</li>
                        <li class="columns three">
                            <h3>Postal Code</h3>
                            [postal code]</li>
                    </ul>
                </div>
            </article>

            <!-- Referral Links Section -->
            <article>
                <h2 class="inline-block">Referral Links</h2>
                <div class="content-section">

                    <table class="column-table">
                        <tr>
                            <td class="text-left width-fifty">
                                <h3 class="h3">Current Referral Link</h3>
                                <strong>[referral link]</strong></td>
                            <td class="text-left width-fifty">
                                <h3 class="h3">Customized Link</h3>
                                <strong>
                                    <input class=" width-thirty" type="text"></strong>
                                <button class="btn btn-small margin-left">Submit</button></td>
                        </tr>
                    </table>

                </div>
            </article>

        </div>

        <!-- This <div> is for 2 column layouts as a container for the right column background. -->
        <div class="bg-right"></div>

    </div>

    <!-- Right Column content goes here. -->
    <aside class="content-aside">
        <!-- Sub Navigation Section -->
        <nav class="sub-nav">
            <ul>
                <!-- Add the .active class to the <li> that needs active styling. -->
                <li class="active"><a class="primary" href="@Url.Action("IBAgentDetails", "Clients")"><span class="arrow"></span><strong>[agent name]</strong>[agent id]</a></li>
                <li><a class="single referrals" href="#"><span class="arrow"></span><strong>Agent Referral Fees</strong></a></li>
                <!-- The last <li> needs the class .last. This is only here for styling purposes. No links should be added inside. -->
                <li class="last"></li>
            </ul>
        </nav>
    </aside>

</div>
<!-- END CONTENT SECTION -->

@section Scripts{
    <script>
        //Ready function
        $(document).ready(function () {
            $('.top-nav ul li#liClients').addClass('active');
        });//End of ready
    </script>
}
