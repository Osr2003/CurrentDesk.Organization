@{
    ViewBag.Title = "TraderAccounts";
    Layout = "~/Areas/SuperAdmin/Views/Shared/SuperAdminMaster.cshtml.cshtml";
}

<!-- BEGIN CONTENT SECTION -->
<div class="content-wrapper">

    <!-- This <div> is for 2 column layouts and contains the left column content and a container for the right column background. -->
    <div class="content-table">

        <!-- Left column content goes here. -->
        <div class="content-left">
            <!-- Page Title Bar -->
            <div class="page-title">
                <h1 class="clients"><span class="normal"><a href="clients.html">Clients</a> : <a href="client-details-trader.html">[client name]</a> :</span> Client Accounts</h1>
            </div>

            <!-- USD Landing Account Section -->
            <article class="overflow">
                <!-- Each landing account section has <div> with the class .landing-header and the appropriate currency class added. -->
                <div class="landing-header usd clearfix">
                    <div class="left">
                        <h2>100-000-0000000</h2>
                        <h3>USD Landing Account</h3>
                    </div>
                    <div class="right">
                        <h3>Balance:<span class="balance"><small>$</small>10,950,000.00</span></h3>
                    </div>
                </div>
                <table id="TableUSD">
                    <tr>
                        <td />
                    </tr>
                </table>
                <div class="button-box text-right">
                    <button class="btn" data-toggle="modal" data-target="#modalAddAccount"><i class="icon-plus-sign"></i> Add USD Account</button>
                </div>
            </article>

        </div>

        <!-- This <div> is for 2 column layouts as a container for the right column background. -->
        <div class="bg-right"></div>

    </div>

    <!-- Right Column content goes here. -->
    <aside class="content-aside">
        <!-- Sub Navigation Section -->
        <nav class="sub-nav">
            <ul>
                <!-- Add the .active class to the <li> that needs active styling. -->
                <li><a class="primary" href="@Url.Action("TraderDetails", "Clients")"><span class="arrow"></span><strong>[client name]</strong>00000000</a></li>
                <li class="active"><a class="single accounts" href="@Url.Action("TraderAccounts", "Clients")"><span class="arrow"></span><strong>Client Accounts</strong></a></li>
                <li><a class="single documents" href="#"><span class="arrow"></span><strong>Client Documents</strong></a></li>
                <li><a class="single history" href="#"><span class="arrow"></span><strong>Client Activity</strong></a></li>
                <li><a class="notes" href="@Url.Action("TraderNoteHistory", "Clients")"><span class="arrow"></span><strong>Client Note</strong>History</a></li>
                <!-- The last <li> needs the class .last. This is only here for styling purposes. No links should be added inside. -->
                <li class="last"></li>
            </ul>
        </nav>
    </aside>

</div>
<!-- END CONTENT SECTION -->

<!-- BEGIN MODAL CONTENT SECTION -->
<div id="modalAddAccount" class="modal hide fade large">

