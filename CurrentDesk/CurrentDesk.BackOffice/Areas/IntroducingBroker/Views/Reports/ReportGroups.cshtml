            </ul>
        </div>

        <!-- Tab Navigation Section -->
        <ul class="nav nav-tabs padding-tabs">
            <li><a href="#tabAccountsEdit" data-toggle="tab">All Accounts</a></li>
            <li><a href="#tabSelectedEdit" data-toggle="tab">Accounts in Group</a></li>
        </ul>


        <!-- BEGIN TAB CONTENT SECTION -->
        <div class="tab-content">

