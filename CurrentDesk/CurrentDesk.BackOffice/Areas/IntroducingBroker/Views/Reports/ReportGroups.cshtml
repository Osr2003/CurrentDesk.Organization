            <div class="tab-pane active" id="tabAccountsEdit">

                <div class="content-section" style="height: 247px;">
                    <table id="TableAccountsEdit">
                        <tr>
                            <td />
                        </tr>
                    </table>

                </div>

            </div>

            <!-- Selected Accounts Tab -->
            <div class="tab-pane" id="tabSelectedEdit">

                <div class="content-section" style="height: 247px;">
                    <table id="TableSelectedEdit">
                        <tr>
                            <td />
                        </tr>
                    </table>
                </div>

            </div>

        </div>
        <!-- END TAB CONTENT SECTION -->
    </div>

    <!-- Modal Footer -->
    <div class="modal-footer">
        <div class="columns six">
            <button class="btn" disabled="">Clear Selected</button>
        </div>
        <div class="columns six text-right">
            <button class="btn" data-dismiss="modal">Cancel</button>
            <button class="btn btn-primary">Save Changes</button>
        </div>
    </div>
</div>
<!-- END MODAL CONTENT SECTION -->

