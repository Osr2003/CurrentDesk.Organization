@model CurrentDesk.BackOffice.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>    
    <link href="../../Content/Common.css" rel="stylesheet" type="text/css" />
</head>
<body id="login">
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
   
    @using (Html.BeginForm())
    {        
        @Html.ValidationSummary(true)

        <div class="login-wrapper">
            <header><img src="../Images/logo-login.png" alt="FastQuote Securities"></header>
            <form>
            <dl class="left-fields">
                <dt>
                    <label for="username">
                        User Name</label></dt>
                <dd>
                    @Html.TextBoxFor(model => model.UserName, new { @id = "username", @class = "input-text" })</dd>
            </dl>
            <dl class="right-fields">
                <dt>
                    <label for="password">
                        Password</label></dt>
                <dd>
                    @Html.PasswordFor(model => model.Password, new { @id = "password", @class = "input-text" })</dd>
            </dl>
            <input type="submit">
            </form>
        </div>
    
