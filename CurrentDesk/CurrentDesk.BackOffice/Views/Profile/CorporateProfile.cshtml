                                    <li class="columns four">
                                        <h3>Bic Number/SWIFT Code</h3>
                                        <label class="bold-font" id="@item.BankAccountID-lblBicOrSwiftCode" >@Html.DisplayFor(model => item.BicOrSwiftCode)</label></li>
